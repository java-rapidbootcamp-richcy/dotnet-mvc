@model AssetViewModel
@{
    ViewData["Title"] = "Asset View Data";
}

<h2>Form Add Asset</h2>

<form asp-action="Save" method="post">
    <div class="form-group">
        <label asp-for="Id">Asset Id</label>
        <input asp-for="Id" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="AssetName">Asset Name</label>
        <input asp-for="AssetName" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Specification">Specification</label>
        <input asp-for="Specification" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="SerialNumber">Serial Number</label>
        <input asp-for="SerialNumber" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="PurchaseYear">Purchase Year</label>
        <input asp-for="PurchaseYear" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="IdPic">Id PIC</label>
        <input asp-for="IdPic" class="form-control">
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>
<a asp-action="List" class="btn btn-sm btn-danger">Back</a>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}