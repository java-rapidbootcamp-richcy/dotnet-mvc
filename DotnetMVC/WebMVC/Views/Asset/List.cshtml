@model List<AssetViewModel>
    @{
    ViewData["Title"] = "Asset List";
    }

    <h2>Asset List</h2>
    <table class="table table-responsive">
        <thead>
            <tr>
                <th>ID</th>
                <th>Asset Name</th>
                <th>Specification</th>
                <th>Serial Number</th>
                <th>Purchase Year</th>
                <th>Id PIC</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model )
    {
            <tr>
                <td>@item.Id</td>
                <td>@item.AssetName</td>
                <td>@item.Specification</td>
                <td>@item.SerialNumber</td>
                <td>@item.PurchaseYear</td>
                <td>@item.IdPic</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-success">View</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>

            </tr>
    }
        </tbody>
    </table>

    <a asp-action="Add" class="btn btn-sm btn-primary">Add</a>

